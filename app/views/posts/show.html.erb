<% if @post.draft %>
  <div class="alert alert-warning">
    Ce post est un brouillon.
  </div>
<% end %>
<div class="card afs-post">
  <div class="card-body">
    <h2><%= @post.title %></h2>
    <h5 class="card-subtitle mt-2 mb-1 text-muted">
      Publi√© le <%= l(@post.created_at, format: :post_datetime) %> par <%= link_to_wca_profile(@post.user.wca_id, false, @post.user.name) %>.
    </h5>
    <div class="mb-4">
      <strong class="d-inline-block mb-2 badge badge-primary">WCA</strong>
      <strong class="d-inline-block mb-2 badge badge-primary">un autre tag</strong>
    </div>
    <div class="card-text mb-4">
      <%= md @post.body_full %>
    </div>

    <%= link_to "Permalien", news_path(@post.slug) %>
    <% if current_user&.can_manage_communication_matters? %>
      <%= link_to(fa_icon("pencil"), edit_news_path(@post), class: "btn btn-sm btn-primary") %>
      <%= link_to(fa_icon("trash"), news_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger") %>
    <% end %>
  </div>
</div>
