<%= simple_form_for(@post, url: @post.new_record? ? news_index_path : news_path(@post)) do |f| %>
  <%= f.error_notification message: "Le formulaire est invalide. Merci de corriger les erreurs ci dessous." %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body, input_html: { class: "enable-simplemde" } %>
    <%= f.input :slug %>
    <%= f.input :draft %>
    <%= f.input :feature %>
    <%= f.input :competition_page %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= javascript_pack_tag "simple_mde", 'data-turbolinks-track': 'reload'  %>
