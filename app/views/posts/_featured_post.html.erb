<div class="col-md-6 mb-4">
  <div class="card flex-md-row box-shadow h-100">
    <div class="card-body d-flex flex-column align-items-start">
      <div class="d-flex flex-row w-100 mb-2">
        <div>
          <strong class="d-inline-block mb-2 badge badge-primary">WCA</strong>
          <strong class="d-inline-block mb-2 badge badge-primary">un autre tag</strong>
          <h3 class="mb-0 w-100">
            <%= link_to post.title, post, class: "text-dark" %>
          </h3>
          <div class="mb-1 text-muted"><%= l(post.created_at, format: :post_datetime) %></div>
        </div>
        <div class="card-img-right ml-auto flex-auto d-none d-md-block">thumbnail</div>
      </div>
      <div class="card-text mb-auto mt-1">
        <%= md post.body_teaser %>
      </div>
      <% if post.fullpost? %>
        <%= link_to "Lire la suite...", post %>
      <% end %>
      <% if current_user&.can_manage_communication_matters? %>
        <div class="mt-2">
          <%= link_to(fa_icon("pencil"), edit_post_path(post), class: "btn btn-sm btn-primary") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
