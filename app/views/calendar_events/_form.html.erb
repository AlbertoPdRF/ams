<%= simple_form_for(event, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :public %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :kind %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
