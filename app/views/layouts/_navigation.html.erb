<header>
  <nav class="navbar navbar-expand-sm navbar-light">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to(image_tag(asset_pack_path("images/Logo_AFS_Seul.svg"), class: "brand-logo"), root_path) %>
        <div class="brand-header">
          <div class="brand-name">
            <%= link_to root_path do %>
              <span class="blue d-none d-md-block">Association Française de Speedcubing</span>
              <span class="blue d-md-none">AFS</span>
            <% end %>
          </div>
          <div class="brand-social">
            <a href="https://www.facebook.com/AFspeedcubing/" target="_blank">
              <i class="fa fa-facebook-official"></i>
            </a>
            <a href="https://www.twitch.tv/afspeedcubing" target="_blank">
              <i class="fa fa-twitch"></i>
            </a>
            <a href="https://github.com/speedcubingfrance/speedcubingfrance.org" target="_blank">
              <i class="fa fa-github"></i>
            </a>
          </div>
        </div>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-afs" aria-controls="navbar-afs" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="navbar-container w-100">
        <div id="navbar-afs" class="collapse navbar-collapse justify-content-sm-center rounded">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to root_url, class: "nav-link nav-home" do %>
                <i class="fa fa-home"></i> <span class="d-sm-none d-lg-inline">Accueil</span><span class="sr-only">(current)</span>
              <% end %>
            </li>
            <li class="nav-item dropdown">
              <% association_active = params[:controller] == "users" || params[:controller] == "subscriptions" ? "active" : nil %>
              <a class="nav-link nav-association dropdown-toggle <%= association_active %>" id="dropdown-association" role="button" data-toggle="dropdown" data-hover="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                <i class="fa fa-info-circle"></i> <span class="d-sm-none d-lg-inline">Association</span>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown-association">
                <a class="dropdown-item" href="#">Présentation</a>
                <a class="dropdown-item" href="#">Adhésions</a>
                <a class="dropdown-item" href="#">Documents</a>
                <a class="dropdown-item" href="#">Logo</a>
              </div>
            </li>
            <li class="nav-item dropdown">
              <% association_active = params[:controller] == "competitions" ? "active" : nil %>
              <a class="nav-link nav-speedcubing dropdown-toggle <%= association_active %>" href="#" id="dropdown-speedcubing" role="button" data-toggle="dropdown" data-hover="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-cubes"></i> <span class="d-sm-none d-lg-inline">Speedcubing</span>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown-speedcubing">
                <a class="dropdown-item" href="#">Présentation de la discipline</a>
                <a class="dropdown-item" href="#">Compétitions</a>
                <a class="dropdown-item" href="#">Règlement</a>
                <a class="dropdown-item" href="#">Turoriels</a>
                <a class="dropdown-item" href="#">Ressources externes</a>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-contact" href="#">
                <i class="fa fa-envelope"></i> <span class="d-sm-none d-lg-inline">Contact</span>
              </a>
            </li>
            <% if current_user %>
              <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" data-hover="dropdown">
                  <div class="avatar-thumbnail "
                       style="background-image: url(<%= current_user.avatar_thumb_url %>);"
                       ></div>
                  <span class="caret"></span>
                </a>
                <div class="dropdown-menu" role="menu">
                  <h6 role="presentation" class="dropdown-header">
                    <%= current_user.name %>
                  </h6>
                  <%= link_to "Votre profil", profile_path, class: "dropdown-item" %>
                  <% if current_user.admin? || current_user.comm? %>
                    <div class="dropdown-divider"></div>
                    <h6 role="presentation" class="dropdown-header">
                      Administration
                    </h6>
                    <% if current_user.admin? %>
                      <%= link_to "Adhésions", subscriptions_path, class: "dropdown-item" %>
                      <%= link_to "Utilisateurs", users_path, class: "dropdown-item" %>
                    <% end %>
                    <a class="dropdown-item" href="#">
                      Posts
                    </a>
                  <% end %>
                  <% if current_user.admin? || current_user.french_delegate? %>
                    <div class="dropdown-divider"></div>
                    <h6 role="presentation" class="dropdown-header">
                      Délégués
                    </h6>
                    <a class="dropdown-item" href="#">
                      Matériel
                    </a>
                    <%= link_to "Mes compétitions", my_competitions_path, class: "dropdown-item" %>
                  <% end %>

                  <div class="dropdown-divider"></div>
                  <%= link_to "Déconnexion", signout_path, class: "dropdown-item" %>
                </div>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to signin_path, class: "signin-elem nav-link nav-signin" do %>
                  <span class="d-sm-none d-md-inline">Connexion</span>
                  <span class="d-none d-sm-inline d-md-none"><i class="fa fa-sign-in"></i></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
