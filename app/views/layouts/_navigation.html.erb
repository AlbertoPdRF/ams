<header>
  <nav class="navbar navbar-expand-sm navbar-light">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to(image_tag(asset_pack_path("images/Logo_AFS_Seul.svg"), class: "brand-logo"), root_path) %>
        <div class="brand-header">
          <div class="brand-name">
            <%= link_to root_path do %>
              <span class="blue d-none d-md-block">Association Française de Speedcubing</span>
              <span class="blue d-md-none">AFS</span>
              <%#<span class="white">Française</span>%>
              <%#<span class="red">de Speedcubing</span>%>
            <% end %>
          </div>
          <div class="brand-social">
            <a href="#"><i class="fa fa-facebook-official"></i></a>
            <a href="#"><i class="fa fa-twitch"></i></a>
            <a href="#"><i class="fa fa-github"></i></a>
          </div>
        </div>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-afs" aria-controls="navbar-afs" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="navbar-container w-100">
        <div class="collapse navbar-collapse justify-content-sm-center rounded" id="navbar-afs">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link nav-home active" href="#">
                <i class="fa fa-home"></i> <span class="d-sm-none d-lg-inline">Accueil</span><span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-association" href="#">
                <i class="fa fa-info-circle" title="Association"></i> <span class="d-sm-none d-lg-inline">Association</span>
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link nav-speedcubing dropdown-toggle" href="#" id="dropdown-speedcubing" role="button" data-toggle="dropdown" data-hover="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-cubes"></i> <span class="d-sm-none d-lg-inline">Speedcubing</span>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown-speedcubing">
                <a class="dropdown-item" href="#">Info</a>
                <a class="dropdown-item" href="#">Compétition</a>
                <a class="dropdown-item" href="#">Sites persos</a>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-contact" href="#">
                <i class="fa fa-envelope"></i> <span class="d-sm-none d-lg-inline">Contact</span>
              </a>
            </li>
            <% if current_user %>
              <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" data-hover="dropdown">
                  <div class="avatar-thumbnail "
                       style="background-image: url(<%= current_user.avatar_thumb_url %>);"
                       ></div>

                  <%#<span class="badge badge-pill badge-secondary">3</span>%>
                  <span class="caret"></span>
                </a>
                <div class="dropdown-menu" role="menu">
                  <h6 role="presentation" class="dropdown-header">
                    <%= current_user.name %>
                  </h6>
                  <a class="dropdown-item" href="#">
                    Votre profil
                  </a>
                  <div class="dropdown-divider"></div>
                  <a role="presentation" class="dropdown-header">
                    Gérer des trucs
                  </a>
                  <a class="dropdown-item" href="#">
                    Bannir des utilisateurs
                  </a>
                  <a class="dropdown-item" href="#">
                    Réclamer de l'argent
                  </a>
                  <a class="dropdown-item" href="#">
                    Où ils sont les timers ?
                  </a>

                  <div class="dropdown-divider"></div>
                  <%= link_to "Casse toi !", signout_path, class: "dropdown-item" %>
                </div>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to signin_path, class: "signin-elem nav-link nav-signin" do %>
                  <span class="d-sm-none d-md-inline">Connexion</span>
                  <span class="d-none d-sm-inline d-md-none"><i class="fa fa-sign-in"></i></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
